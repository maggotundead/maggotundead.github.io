extends layout

block content
    section(class='section one-product')
        div.container
            //- each val, index in result
            h2 #{goods[0]['name']}

            div(class='col col-md-8') #{goods[0]['description']}

            img(
                class = 'product-image'
                src = 'images/' + goods[0]['image']
                alt = goods[0]['name']
                title = goods[0]['name']
            )

            div( class='price text-center' ) #{ goods[0]['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ') } uah

            button(
                class = 'button-success add-to-cart'
                data-goods_id = goods[0]['id']
            ) to cart

    //- include navigation
