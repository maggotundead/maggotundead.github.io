extends layout

block content
    section(class='order')
        div.container
            div(
                id = 'cart-products'
                class = 'cart-products'
            )
            form(
                id = 'lite-shop-order'
                class = 'order-form'
                action = ''
            )
                div
                    label
                        input(
                            type = 'text'
                            id = 'user_name'
                            placeholder = 'enter your name'
                        )
                div
                    label
                        input(
                            type = 'text'
                            id = 'user_phone'
                            placeholder = 'enter your phone'
                        )
                div
                    label
                        input(
                            type = 'text'
                            id = 'user_mail'
                            placeholder = 'enter your email'
                        )
                div
                div
                    label
                        input(
                            type = 'text'
                            id = 'user_address'
                            placeholder = 'enter your address'
                        )
                div
                    label
                        input(
                            type = 'checkbox'
                            id = 'user_terms'
                        )
                        span(class='checkbox-text') terms and conditions
                button(
                    type = 'submit'
                    class = 'submit-button'
                ) submit order
